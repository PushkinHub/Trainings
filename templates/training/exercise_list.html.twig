{% extends 'base.html.twig' %}

{% block title %}Exercise list{% endblock %}
{% block content_title %}Exercise list{% endblock %}
{% block content %}
    <main role="main" class="flex-shrink-0">
        <div class="container">
            <table class="table table-striped table-sm">
                <tr>
                    <th>training</th>
                    <th>id</th>
                    <th>exercise</th>
                    <th>description</th>
                    <th>parameters</th>
                </tr>
                {% for exercise in exercises %}
                    <tr>
                        <td>{{ exercise.training.id }}</td>
                        <td>{{ exercise.id }}</td>
                        <td>{{ exercise.exerciseType.name }}</td>
                        <td>{{ exercise.description }}</td>
                        <td>
                            <table>
                                {% for parameter in exercise.exerciseParameters %}
                                    <tr>
                                        <td>{{ parameter.value }}</td>
                                        <td>{{ parameter.type.name }}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </main>
{% endblock %}

