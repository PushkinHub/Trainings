{% extends 'base.html.twig' %}

{% block title %}Training list{% endblock %}
{% block content_title %}Training list{% endblock %}
{% block content %}
            <table class="table table-striped table-sm">
                <tr>
                    <th>id</th>
                    <th>repeatsActual</th>
                    <th>repeatsExpect</th>
                    <th>trainedAt</th>
                    <th>note</th>
                    <th>Training edit</th>
                </tr>
                {% for training in trainings %}
                    <tr>
                        <td><a href="{{ path('app_ward_exercise_list', {training: training.id}) }}">{{ training.id }}</a>
                        </td>
                        <td>{{ training.repeatsActual }}</td>
                        <td>{{ training.repeatsExpect }}</td>
                        <td>{{ training.trainedAt }}</td>
                        <td>{{ training.note }}</td>
                        <td><a href="{{ path('app_training_edit', {training: training.id}) }}">edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
{% endblock %}

